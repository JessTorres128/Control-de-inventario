                        </TextField>
                        <HBox alignment="CENTER" prefHeight="54.0" prefWidth="685.0" spacing="20.0">
                           <children>
                              <TextField fx:id="txtBusquedaID" onKeyTyped="#EscaneoBusqueda" prefHeight="26.0" prefWidth="475.0" promptText="Busqueda (por id)" style="-fx-background-color: white; -fx-border-color: #543383;">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#BuscarProducto" style="-fx-background-color: #543383;" text="Agregar Producto" textFill="WHITE" />
