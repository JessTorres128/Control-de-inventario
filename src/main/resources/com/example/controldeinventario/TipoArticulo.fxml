<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controldeinventario.TipoArticuloController">
   <children>
      <TabPane fx:id="tabPaneVentana">
         <tabs>
            <Tab fx:id="tabSearch" closable="false" text="Buscar">
               <content>
                  <VBox prefHeight="350.0" prefWidth="350.0">
                     <children>
                        <Label text="Criterios de bÃºsqueda">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <VBox prefHeight="115.0" prefWidth="340.0">
                           <children>
                              <Label text="Mostrar">
                                 <VBox.margin>
                                    <Insets left="15.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox prefHeight="23.0" prefWidth="340.0" spacing="10.0">
                                 <children>
                                    <JFXCheckBox fx:id="checkBoxMaterial" selected="true" text="Materiales" />
                                    <JFXCheckBox fx:id="checkBoxHerramienta" selected="true" text="Herramientas" />
                                 </children>
                              </HBox>
                              <Label text="Filtrar">
                                 <VBox.margin>
                                    <Insets left="15.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox prefHeight="22.0" prefWidth="340.0" spacing="10.0">
                                 <children>
                                    <JFXRadioButton fx:id="radioButtonID" selected="true" text="ID" />
                                    <JFXRadioButton fx:id="radioButtonNombre" text="Nombre" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="10.0" top="5.0" />
                                 </VBox.margin>
                              </HBox>
                              <TextField fx:id="txtBusqueda" onKeyReleased="#Busqueda" />
                           </children>
                        </VBox>
                        <TableView fx:id="tableViewTMateriales" prefHeight="200.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </TableView>
                        <Label fx:id="lblContador" text="Se encontraron x registros" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabNew" closable="false" text="Nuevo / Modificar">
              <content>
                  <VBox prefHeight="331.0" prefWidth="339.0">
                     <children>
                        <Label text="Agregar / Modificar un tipo de articulo">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="24.0" prefWidth="340.0" spacing="10.0">
                           <children>
                              <JFXRadioButton fx:id="rbMaterial" selected="true" text="Material" />
                              <JFXRadioButton fx:id="rbHerramienta" text="Herramienta" />
                           </children>
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox prefHeight="53.0" prefWidth="340.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="170.0">
                                 <children>
                                    <Label text="ID Articulo" />
                                    <TextField fx:id="txtID">
                                       <VBox.margin>
                                          <Insets left="10.0" right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="170.0">
                                 <children>
                                    <Label text="Nombre del articulo" />
                                    <TextField fx:id="txtNombre">
                                       <VBox.margin>
                                          <Insets left="10.0" right="10.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
              </content>
            </Tab>
         </tabs>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" top="20.0" />
         </HBox.margin>
      </TabPane>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
         <children>
            <JFXButton fx:id="btnNew" prefHeight="60.0" prefWidth="70.0" text="Nuevo" />
            <JFXButton fx:id="btnSave" disable="true" prefHeight="60.0" prefWidth="70.0" text="Guardar" />
            <JFXButton fx:id="btnEdit" prefHeight="60.0" prefWidth="70.0" text="Modificar" />
            <JFXButton fx:id="btnDelete" prefHeight="60.0" prefWidth="70.0" text="Borrar" />
            <JFXButton fx:id="btnCancel" disable="true" prefHeight="60.0" prefWidth="70.0" text="Cancelar" />
            <JFXButton fx:id="btnExit" prefHeight="60.0" prefWidth="70.0" text="Salir" />
         </children>
      </VBox>
   </children>
</HBox>
