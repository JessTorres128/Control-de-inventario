<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controldeinventario.EmpleadosController">
   <children>
      <TabPane fx:id="tabPaneVentana" prefWidth="550.0">
         <tabs>
            <Tab fx:id="tabSearch" closable="false" text="Buscar">
               <content>
                  <VBox prefHeight="200.0" prefWidth="550.0">
                     <children>
                        <VBox prefHeight="93.0" prefWidth="519.0" spacing="5.0">
                           <children>
                              <Label text="Criterios de búsqueda">
                                 <VBox.margin>
                                    <Insets left="10.0" top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <HBox prefHeight="28.0" prefWidth="510.0" spacing="20.0">
                                 <children>
                                    <JFXRadioButton fx:id="rbID" selected="true" text="ID" />
                                    <JFXRadioButton fx:id="rbNombre" text="Nombre" />
                                    <JFXRadioButton fx:id="rbRol" text="Rol" />
                                 </children>
                                 <VBox.margin>
                                    <Insets left="10.0" />
                                 </VBox.margin>
                              </HBox>
                              <TextField fx:id="txtBusqueda" onKeyReleased="#Busqueda">
                                 <VBox.margin>
                                    <Insets left="20.0" right="50.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </VBox>
                        <TableView fx:id="tableViewUsuarios" prefHeight="301.0" prefWidth="540.0" />
                        <Label fx:id="lblContador" text="Se cargaron x registros" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab fx:id="tabNew" closable="false" text="Nuevo/Modificar">
              <content>
                  <VBox prefHeight="431.0" prefWidth="538.0">
                     <children>
                        <Label text="Agregar / modificar un empleado">
                           <VBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </VBox.margin>
                        </Label>
                        <HBox prefHeight="47.0" prefWidth="540.0">
                           <children>
                              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0">
                                 <children>
                                    <Label text="ID del empleado" />
                                    <TextField fx:id="txtID" prefHeight="26.0" prefWidth="251.0">
                                       <VBox.margin>
                                          <Insets left="40.0" right="40.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="340.0">
                                 <children>
                                    <Label text="Nombre completo" />
                                    <TextField fx:id="txtNombre">
                                       <VBox.margin>
                                          <Insets left="40.0" right="30.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox prefHeight="63.0" prefWidth="540.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                              <VBox prefHeight="200.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Sexo">
                                       <VBox.margin>
                                          <Insets left="10.0" top="5.0" />
                                       </VBox.margin>
                                    </Label>
                                    <HBox prefHeight="24.0" prefWidth="270.0" spacing="10.0">
                                       <children>
                                          <JFXRadioButton fx:id="rbMasculino" selected="true" text="Masculino" />
                                          <JFXRadioButton fx:id="rbFemenino" text="Femenino" />
                                       </children>
                                       <VBox.margin>
                                          <Insets left="10.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="340.0">
                                 <children>
                                    <Label text="Nombre de usuario">
                                       <VBox.margin>
                                          <Insets left="10.0" top="5.0" />
                                       </VBox.margin>
                                    </Label>
                                    <TextField fx:id="txtUsername">
                                       <VBox.margin>
                                          <Insets right="30.0" />
                                       </VBox.margin>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox prefHeight="61.0" prefWidth="540.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="270.0">
                                 <children>
                                    <Label text="Contraseña">
                                       <VBox.margin>
                                          <Insets left="10.0" top="5.0" />
                                       </VBox.margin>
                                    </Label>
                                    <PasswordField fx:id="txtPass">
                                       <VBox.margin>
                                          <Insets left="5.0" right="40.0" />
                                       </VBox.margin>
                                    </PasswordField>
                                 </children>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="270.0">
                                 <children>
                                    <Label text="Confirma la contraseña">
                                       <VBox.margin>
                                          <Insets left="10.0" top="5.0" />
                                       </VBox.margin>
                                    </Label>
                                    <PasswordField fx:id="txtConfirmarPass">
                                       <VBox.margin>
                                          <Insets left="5.0" right="40.0" />
                                       </VBox.margin>
                                    </PasswordField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <JFXComboBox fx:id="cbRoles" promptText="Roles" />
                              <JFXButton fx:id="btnBuscarRol" text="Buscar rol" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
              </content>
            </Tab>
         </tabs>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" top="20.0" />
         </HBox.margin>
      </TabPane>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0" spacing="5.0">
         <children>
            <JFXButton fx:id="btnNew" prefHeight="75.0" prefWidth="75.0" text="Nuevo" />
            <JFXButton fx:id="btnSave" disable="true" prefHeight="75.0" prefWidth="75.0" text="Guardar" />
            <JFXButton fx:id="btnEdit" prefHeight="75.0" prefWidth="75.0" text="Modificar" />
            <JFXButton fx:id="btnDelete" prefHeight="75.0" prefWidth="75.0" text="Borrar" />
            <JFXButton fx:id="btnCancel" disable="true" prefHeight="75.0" prefWidth="75.0" text="Cancelar" />
            <JFXButton fx:id="btnExit" prefHeight="75.0" prefWidth="75.0" text="Salir" />
         </children>
      </VBox>
   </children>
</HBox>
