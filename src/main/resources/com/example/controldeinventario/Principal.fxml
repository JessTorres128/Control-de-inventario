                <MenuItem mnemonicParsing="false" onAction="#IngresarLogin" text="Iniciar sesión" />
                  <MenuItem mnemonicParsing="false" onAction="#IngresarLogin" text="Cerrar sesión" />
                  <MenuItem mnemonicParsing="false" text="Salir de la aplicación" />
              </items>
